<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>HelloAce</servlet-name>
		<servlet-class>com.alibaba.ace.demo.HelloAce</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HelloPaasService</servlet-name>
		<servlet-class>com.alibaba.ace.demo.HelloPaasService</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>helloJSP</servlet-name>
		<jsp-file>/HelloAce.jsp</jsp-file>
		<init-param>
			<param-name>appName</param-name>
			<param-value>ACE.demo</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloAce</servlet-name>
		<url-pattern>/HelloAce.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HelloPaasService</servlet-name>
		<url-pattern>/HelloPaasService.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>helloJSP</servlet-name>
		<url-pattern>/HelloAce.jsp</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
